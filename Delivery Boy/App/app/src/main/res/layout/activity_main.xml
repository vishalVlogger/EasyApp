<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.Activity.LoginActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:src="@drawable/ic_easy_shop"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="Glad to see you"
        android:textColor="@color/txt_black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="Login access to delivery admin"
        android:textColor="@color/smoke_gray"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="Contact no."
        android:textColor="@color/smoke_gray"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/mobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:hint="+91"
        android:inputType="phone"
        android:textColor="@color/txt_black"
        android:textColorHint="@color/smoke_gray"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_check_circle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15.8dp"
        android:layout_marginRight="30dp"
        android:background="@color/smoke_gray" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30.2dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rectangle_green"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="Send OTP"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!--

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileNo"
            android:hint="Mobile No"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextbtn"
            android:text="next"
            android:layout_below="@+id/mobileNo"

            />


    -->


</LinearLayout>