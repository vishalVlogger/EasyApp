<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_gray_border_home"
    android:orientation="horizontal"
    android:paddingBottom="23.3dp"
    android:id="@+id/li_addressList"
    android:layout_marginBottom="16dp"
    android:paddingTop="13.7dp">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.9dp"
        android:layout_marginRight="14.7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/txt_black"
                android:text="@string/akshay_syal"
                android:fontFamily="@font/sf_pro_display_semibold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pencil"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/smoke_gray"
            android:layout_marginRight="50dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/_2982_robinson_lane_hackberry_nla_70645"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/sf_pro_display_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/txt_black"
                android:text="@string/mobile"
                android:fontFamily="@font/sf_pro_display_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/smoke_gray"
                android:text="@string/_91_99999xxxxx"
                android:fontFamily="@font/sf_pro_display_regular"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>