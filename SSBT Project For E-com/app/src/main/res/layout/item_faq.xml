<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13.5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/li_faqDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="23.4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_MainTitle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_black"
            android:textSize="16sp"
            android:text="@string/lorem_ipsum_is_simply_dummy_text"
            android:fontFamily="@font/sf_pro_display_semibold"/>

        <ImageView
            android:id="@+id/img_Add"
            android:layout_width="15.2dp"
            android:layout_height="15.2dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="center"
            android:tint="@color/txt_black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faq_description"
        android:maxLines="4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:lineSpacingExtra="5dp"
        android:paddingTop="18dp"
        android:textSize="13sp"
        android:visibility="gone"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/smoke_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/smoke_gray"
        android:layout_marginTop="30.5dp"/>
</LinearLayout>