<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".Activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="55dp"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="44.3dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/create_new_account"
            android:textColor="@color/txt_black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/please_all_details_to_create_new_account"
            android:textColor="@color/smoke_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="101dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/name"
            android:textColor="@color/smoke_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:background="@color/transparent"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:hint="@string/appdroid"
            android:inputType="textCapWords"
            android:textColor="@color/txt_black"
            android:textColorHint="@color/txt_black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15.8dp"
            android:layout_marginRight="30dp"
            android:background="@color/smoke_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20.2dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/email_id"
            android:textColor="@color/smoke_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/ic_check_circle"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:hint="@string/appdroid_gmail_com"
            android:inputType="textEmailAddress"
            android:textColor="@color/txt_black"
            android:textColorHint="@color/txt_black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15.8dp"
            android:layout_marginRight="30dp"
            android:background="@color/smoke_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20.2dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/password"
            android:textColor="@color/smoke_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:hint="@string/txt_xxxxxxx"
                android:inputType="textPassword"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/txt_black"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/frame_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="7dp"
                android:paddingRight="30dp"
                android:paddingBottom="9dp">

                <ImageView
                    android:id="@+id/img_eye1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eye_vision"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_eye2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eye_invision" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:background="@color/smoke_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20.2dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/confirm_password"
            android:textColor="@color/smoke_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/et_password1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:hint="@string/txt_xxxxxxx"
                android:inputType="textPassword"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/txt_black"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/frame_eye1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="7dp"
                android:paddingRight="30dp"
                android:paddingBottom="9dp">

                <ImageView
                    android:id="@+id/img_eye3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eye_vision"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_eye4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eye_invision" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:background="@color/smoke_gray" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30.2dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_green"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:text="@string/already_have_an_account"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/terms_and_condition"
            android:textAlignment="center"
            android:lineSpacingExtra="3.5dp"
            android:textSize="13sp" />
    </LinearLayout>

</ScrollView>