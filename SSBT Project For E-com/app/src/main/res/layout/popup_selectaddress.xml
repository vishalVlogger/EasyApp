<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_marginBottom="4dp"
    android:background="@drawable/rectangle_white_topcure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_address"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textColor="@color/txt_black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:paddingLeft="14.1dp"
            android:paddingRight="13.8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_green_home"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_Done"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:text="@string/done"
            android:background="@drawable/rectangle_green_home"
            android:paddingLeft="17.9dp"
            android:paddingTop="1dp"
            android:paddingRight="18.1dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAddressList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:overScrollMode="never"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp" />
</LinearLayout>